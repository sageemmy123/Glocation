<?xml version="1.0" encoding="utf-8" ?>
<widget id="widget.Glocation" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Geo location</name>
    <description>Gets the current location of the user</description>

    <icon />
        <properties>
            <property key="locationEntity" type="entity" required="true">
                <caption>Location entity</caption>
                <category>Data source</category>
                <description>Location</description>
            </property>
            <property key="onchangemf" type="microflow" required="true">
                <caption> Send coordinates to server</caption>
                <category>Appearance</category>
                <description>The microflow sends the geo-coordinates to the server</description>
                <returnType type="Boolean"/>
            </property>
            <property key="latitudeAttribute" type="attribute" required="true" entityProperty="locationEntity">
                <caption>Latitude</caption>
                <category>Data source</category>
                <description>The latitude specified in the location entity</description>
                <attributeTypes>
                    <attributeType name="String" />
                </attributeTypes>
            </property>
            <property key="longitudeAttribute" type="attribute" required="false" entityProperty="locationEntity">
                <caption>Longitude</caption>
                <category>Data source</category>
                <description>The longitude specified in the location entity</description>
                <attributeTypes>
                    <attributeType name="String"/>
                </attributeTypes>
            </property>
            <property key="cityName" type="attribute" required="false" entityProperty="locationEntity">
                <caption>Address</caption>
                <category>Data source</category>
                <description>The address that is in the location entity</description>
                <attributeTypes>
                    <attributeType name="String"/>
                </attributeTypes>
            </property>
        </properties>
</widget>
